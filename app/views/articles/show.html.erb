<div class="d-flex justify-content-between align-items-center bg-light p-2 rounded-bottom border">
  <h2><%= link_to 'Wikinimous', articles_path, { class: "text-dark text-decoration-none" } %></h2>
  <%= link_to 'New Article', new_article_path, { class: "btn btn-primary" } %>
</div>

<div class="banner">
  <h1 class="text-white"><%= @article.title %></h1>
</div>

<div class="container mt-5">
  <div class="card bg-light my-2 mx-2 p-5">
    <div class="d-flex justify-content-between">
      <h2>Recipe</h2>
      <div>

        <a href="<%= edit_article_path %>"><i class="fa fa-pencil m-3"></i></a>
        <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= article_path(@article) %>">
          <i class="fa fa-trash-o"></i>
        </a>
      </div>
    </div>
    <p><%= @article.content %></p>
  </div>
</div>

<style>
  h1{
    text-shadow: 0 0 0.2em rgba(0,0,0,0.6);
    padding: 10%;
  }

  .banner{
    background-image: url('https://loremflickr.com/1080/580/<%= @article.title.truncate_words(1) %>');
    object-fit: cover;
  }
</style>
